<Window x:Class="MailForward.Counterparties"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MailForward"
        mc:Ignorable="d"
        Title="Counterparties" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="dataGrid" AutoGeneratingColumn="DataGrid_AutoGeneratingColumn" HorizontalAlignment="Stretch" Margin="10,10,10,10" VerticalAlignment="Stretch" ItemsSource="{Binding Cpties}" />
    </Grid>
</Window>
